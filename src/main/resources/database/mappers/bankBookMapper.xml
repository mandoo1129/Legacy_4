<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
 <mapper namespace="com.iu.s1.bankbook.BankbookDAO">
 
	<select id="detail" parameterType="java.lang.long" resultType="com.iu.s1.bankbook.BankBookDTO">
		SELECT * FROM BANKBOOK WHERE BOOKNUMBER=#{bookNumber}
	</select>
	
 	<select id="list" resultType="com.iu.s1.bankbook.BankBookDTO">
 		SELECT * FROM BANKBOOK
 	</select>
 	
 	<insert id="add" parameterType="com.iu.s1.bankbook.BankBookDTO">
 		INSERT INTO BANKBOOK (BOOKNUMBER, BOOKNAME, BOOKCONTENTS, BOOKRATE, BOOKSALE)
		VALUES (BANKBOOK_SEQ.NEXTVAL, #{bookName}, #{bookContents}, #{bookRate}, #{bookSale})
 	</insert>

	<delete id="delete" parameterType="com.iu.s1.bankbook.BankBookDTO">
		DELETER BANKBOOK WHERE NUM = #{NUM}
	</delete>
	
 </mapper>		
 